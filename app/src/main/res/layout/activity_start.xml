<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image1"
        android:layout_width="409dp"
        android:layout_height="487dp"
        android:src="@drawable/illustration"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-16dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title"
        android:layout_width="368dp"
        android:layout_height="84dp"
        android:text="The Best Platform For Online Learning"

        android:textAlignment="center"
        android:textColor="#343674"
        android:textSize="31sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="21dp"
        tools:layout_editor_absoluteY="438dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="322dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:text="Amet minim mollit non deserunt ullamco est sit aliqua amet sint. Velit officia consequat duis enim velit mollit."
        android:textAlignment="center"
        android:textColor="#343674"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="44dp" />

    <ImageButton
        android:id="@+id/imagebutton"
        android:layout_width="251dp"
        android:layout_height="83dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/get_start_btn"
        android:contentDescription="@string/button_start"
        app:layout_constraintEnd_toEndOf="@+id/subtitle"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/subtitle"
        app:layout_constraintTop_toBottomOf="@+id/subtitle"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
