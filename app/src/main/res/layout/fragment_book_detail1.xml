<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/book1"
        android:layout_width="214dp"
        android:layout_height="322dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/book_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="108dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/book1"
        android:orientation="vertical"
        app:layout_editor_absoluteX="153dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="108dp"
            android:layout_height="23dp"
            android:text="David Wolf"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="108dp"
            android:layout_height="23dp"
            android:text="Cold Lake"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center">
        </TextView>
        <TextView
            android:id="@+id/txt3"
            android:layout_marginBottom="25dp"
            android:layout_width="108dp"
            android:layout_height="23dp"
            android:text="Jeff Carson"
            android:textSize="13sp"
            android:textColor="@color/grey_primary"
            android:gravity="center">
        </TextView>
    </LinearLayout>
    <Button
        android:id="@+id/btn1"
        android:layout_width="153dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:background="@drawable/bg_tombol_biru"
        android:text="Buy Ebook"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_editor_absoluteX="50dp"
        tools:ignore="MissingConstraints">
    </Button>
    <Button
        android:id="@+id/btn2"
        android:layout_width="153dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        android:background="@drawable/bg_tombol_bluewhite"
        android:text="Buy Audio"
        android:textColor="@color/blue_primary"
        android:textSize="14sp"
        app:layout_editor_absoluteX="221dp"
        tools:ignore="MissingConstraints">
    </Button>
    <TextView
        android:id="@+id/txt4"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        app:layout_editor_absoluteX="30dp"
        android:layout_width="77dp"
        android:layout_height="23dp"
        android:text="Best Seller"
        android:textColor="#444444"
        android:textSize="15dp"
        tools:ignore="MissingConstraints">
    </TextView>
    <ImageView
        android:id="@+id/book2"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        app:layout_editor_absoluteX="30dp"
        android:layout_width="75dp"
        android:layout_height="134dp"
        android:src="@drawable/book_7"
        tools:ignore="MissingConstraints">
    </ImageView>
    <ImageView
        android:id="@+id/book3"
        app:layout_constraintTop_toBottomOf="@id/txt4"
        app:layout_constraintStart_toEndOf="@id/book2"
        android:layout_marginStart="71dp"
        android:layout_width="75dp"
        android:layout_height="134dp"
        android:src="@drawable/book_3"
        tools:ignore="InvalidId,MissingConstraints">
    </ImageView>
    <ImageView
        app:layout_constraintTop_toBottomOf="@id/txt4"
        app:layout_constraintStart_toEndOf="@id/book3"
        android:layout_marginStart="71dp"
        android:layout_width="75dp"
        android:layout_height="134dp"
        android:src="@drawable/book_6"
        tools:ignore="MissingConstraints">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>